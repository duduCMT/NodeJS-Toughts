<div class="home-header">
  <form action="/" method="get" class="home-input-search">
    <input type="text" name="search" placeholder="Está buscando por algo?" value="{{this.search}}">
    <input type="submit" class="btn" value="Buscar">
  </form>
  <div class="order-container">
    <span>Ordernar por: </span>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}">
      <input type="hidden" name="order" value="new">
      <button type="submit">
        <i class="bi bi-arrow-up"></i>
      </button>
    </form>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}">
      <input type="hidden" name="order" value="old">
      <button type="submit">
        <i class="bi bi-arrow-down"></i>
      </button>
    </form>
    <a href="/" class="clear">Limpar</a>
  </div>
</div>

<div class="search-title-container">
  {{#if search}}
    <h1>Resultados da busca: </h1>
    <span>{{toughtsQty}}</span>
  {{else}}
    <h1>Conheça alguns pensamentos:</h1>
  {{/if}}
</div>

{{#if hasToughts}}
  <p class="toughts-message">Não temos nenhum pensamento para você no momento :(</p>
{{/if}}

<div class="toughts-container">
  {{#each toughts}}
    <figure>
      <blockquote>
        "{{this.title}}"
      </blockquote>
      <figcaption>por <span>{{this.User.name}}</span></figcaption>
    </figure>
  {{/each}}
</div>


